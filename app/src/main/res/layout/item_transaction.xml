<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="9dp"
    app:cardBackgroundColor="@color/teal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Transaction ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvTransactionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvTransactionIdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12345"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <!-- Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvAmountValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹500.00"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- New Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tvNewBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Payemnt For:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvforpaymentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WALLET"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

        <!-- Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvDateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/12/2021"
                android:textSize="16sp"
                android:textColor="#000000"
                android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>