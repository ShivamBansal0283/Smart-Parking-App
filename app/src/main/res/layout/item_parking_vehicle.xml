<!--<?xml version="1.0" encoding="utf-8"?>-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="5dp"
        android:background="@color/teal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvVehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Number"
            android:padding="6dp"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="0dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnSearchParking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/black"
                android:text="Search Parking"/>


            <Button
                android:id="@+id/btnScanQR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/black"
                android:text="Scan QR"/>
        </LinearLayout>

        <!-- These buttons should be initially invisible and shown when the vehicle is parked -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="0dp"
            android:paddingVertical="2dp"
            android:id="@+id/parkedControlsLayout">

            <Button
                android:id="@+id/btnFinish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/black"
                android:text="Finish Parking"/>

            <Button
                android:id="@+id/btnDirections"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/black"
                android:text="Directions"/>

            <Button
                android:id="@+id/btnCancelBooking"
                android:layout_width="0dp"
                android:backgroundTint="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="Cancel Booking"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="0dp"
            android:paddingVertical="2dp"
            android:id="@+id/BookControlsLayout">


            <Button
                android:id="@+id/btnStartParking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/black"
                android:text="Start Parking"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tvBooked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"/>


        <!-- Timer view to show the time parked -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="16sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>