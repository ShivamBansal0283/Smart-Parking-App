<!--<?xml version="1.0" encoding="utf-8"?>-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="5dp"
        android:layout_margin="10dp">
<!--        android:background="@drawable/card_background">-->

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Owner Name -->
        <TextView
            android:id="@+id/tvOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner: Loading..."
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingBottom="6dp" />

        <!-- Vehicle Registration Number -->
        <TextView
            android:id="@+id/tvVehicleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vehicle Number: Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="6dp" />

        <!-- Parking Name -->
        <TextView
            android:id="@+id/tvParkingName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking: Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:paddingBottom="6dp" />

        <!-- Parking ID -->
        <TextView
            android:id="@+id/tvParkingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parking ID: Loading..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="6dp" />

        <!-- Location -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="6dp" />

        <!-- Mode -->
        <TextView
            android:id="@+id/tvMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode: Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="6dp" />

        <!-- Price Per Hour -->
        <TextView
            android:id="@+id/tvPricePerHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Per Hour: â‚¹ Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:paddingBottom="6dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Email: Loading..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="6dp" />

        <!-- Available Slots -->
        <TextView
            android:id="@+id/tvAvailableSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Slots: Loading..."
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:paddingBottom="12dp" />

        <!-- Start Time Input -->
<!--        <EditText-->
<!--            android:id="@+id/etStartTime"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Enter Start Time (e.g., 5:00 PM)"-->
<!--            android:inputType="text"-->
<!--            android:padding="10dp"-->
<!--            android:background="@android:drawable/edit_text"-->
<!--            android:layout_marginBottom="12dp" />-->
            <Button
                android:id="@+id/btnSelectTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="12dp" />

        <!-- Book Button -->
        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Parking"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@android:color/darker_gray"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnScanQRCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>