<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_teal">


    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_teal"
        app:title="Finish Parking"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- CardView containing the form -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_margin="16dp">

        <!-- Linear Layout containing all form fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Parking ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvParkingId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking ID"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvParkingIdValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Vehicle Number -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvVehicleNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Number"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvVehicleNumberValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Owner Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvOwnerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvOwnerNameValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Owner Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvOwnerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner Email"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvOwnerEmailValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Start Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvStartTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- End Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Time"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvEndTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Total Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvTotalPriceValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Price Per Hour -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvPricePerHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price Per Hour"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvPricePerHourValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>

            <!-- Payment Buttons -->
            <Button
                android:id="@+id/btnPayThroughWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay Through Wallet"
                android:backgroundTint="@color/dark_grey"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/btnPayNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay Now"
                android:backgroundTint="@color/black"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/teal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>